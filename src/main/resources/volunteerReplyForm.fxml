<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox fx:id="AddForm" alignment="CENTER" prefHeight="600.0" prefWidth="350.0" spacing="10.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.ShelterMe.project.controllers.VolunteerReplyController">

    <padding>
        <Insets bottom="25.0" left="50.0" right="50.0" top="25.0" />
    </padding>

    <Text id="title-text" fx:id="volunteerReplyName" styleClass="text-id" text="X's Request" textAlignment="CENTER" wrappingWidth="200.0">
        <VBox.margin>
            <Insets bottom="40.0" />
        </VBox.margin></Text>
    <Text id="text-bold" strokeType="OUTSIDE" strokeWidth="2.0" text="Message:" />
    <Text fx:id="messageToVolunteer" strokeType="OUTSIDE" strokeWidth="0.0" />
    <Text id="text-bold" strokeType="OUTSIDE" strokeWidth="2.0" text="Contact information:">
      <VBox.margin>
         <Insets />
      </VBox.margin></Text>
    <Text fx:id="contactToVolunteer" strokeType="OUTSIDE" strokeWidth="0.0" />
   <TextArea prefHeight="100.0" prefWidth="200.0" promptText="Your message">
      <VBox.margin>
         <Insets top="20.0" />
      </VBox.margin></TextArea>
   <TextArea prefHeight="50.0" prefWidth="200.0" promptText="Your contact information" />
    <HBox alignment="CENTER" spacing="30">
        <Button id="approve" fx:id="approveRequestButton" onAction="#handleApproveRequest" text="Approve" />
        <Button id="reject" fx:id="rejectRequestButton" onAction="#handleRejectRequest" text="Reject" />
    </HBox>

</VBox>
